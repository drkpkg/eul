<%= form_for(user, html:{class: 'ui form'}) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:action] == 'new' %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :lastname %>
      <%= f.text_field :lastname %>
    </div>

    <div class="field">
      <%= f.label :document %>
      <%= f.text_field :document %>
    </div>

    <div class="field">
      <%= f.label :user_type_id %>
      <div id="tdropdown" class="ui fluid search selection dropdown">
        <%= f.select :user_type_id, UserType.all.collect { |t| [t.title, t.id] }, include_blank: true %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar datos', class: 'ui button' %>
  </div>
<% end %>
