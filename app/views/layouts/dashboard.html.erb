<!DOCTYPE html>
<html>
  <head>
    <title>Eul</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui container">
      <br>
      <div class="ui secondary menu">
        <div class="header item">EUL</div>

        <div class="right menu">
          <%= button_to delete_url, method: :post, class: "ui item icon button pop", data:{content:"Cerrar sesiÃ³n"} do %>
            <i class="ui remove icon"></i>
          <% end %>
        </div>
      </div>
      <div class="ui divider"></div>
      <div class="ui grid">
        <div class="four wide column">
          <div class="ui secondary vertical pointing fluid menu">
            <div class="ui accordion">
              <div class="active title">
                <i class="dropdown icon"></i>
                Usuarios
              </div>
              <div class="content">
                <%= link_to users_url, class: 'item' do %>
                  Listado
                <% end %>
                <%= link_to new_user_url, class: 'item' do %>
                  Nuevo usuario
                <% end %>
              </div>
            </div>
            <div class="ui accordion">
              <div class="active title">
                <i class="dropdown icon"></i>
                Roles
              </div>
              <div class="content">
                <%= link_to user_types_url, class: 'item' do %>
                  Listado
                <% end %>
                <%= link_to new_user_type_url, class: 'item' do %>
                  Nuevo rol
                <% end %>
              </div>
            </div>
            <div class="ui accordion">
              <div class="active title">
                <i class="dropdown icon"></i>
                Paquetes
              </div>
              <div class="content">
                <%= link_to packages_url, class: 'item' do %>
                  Listado
                <% end %>
                <%= link_to new_package_url, class: 'item' do %>
                  Nuevo paquete
                <% end %>
              </div>
            </div>
            <div class="ui accordion">
              <div class="active title">
                <i class="dropdown icon"></i>
                Contenedores
              </div>
              <div class="content">
                <%= link_to containers_url, class: 'item' do %>
                  Listado
                <% end %>
                <%= link_to new_container_url, class: 'item' do %>
                  Nuevo contenedor
                <% end %>
              </div>
            </div>
            <div class="ui accordion">
              <div class="active title">
                <i class="dropdown icon"></i>
                Remitentes
              </div>
              <div class="content">
                <%= link_to receivers_url, class: 'item' do %>
                  Listado
                <% end %>
                <%= link_to new_receiver_url, class: 'item' do %>
                  Nuevo remitente
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="twelve wide column">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
