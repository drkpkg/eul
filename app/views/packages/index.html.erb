<p id="notice"><%= notice %></p>

<% conveyance = ['Terrestre', 'Aéreo', 'Marino'] %>
<% state = ['No enviado', 'Enviado', 'Parado', 'Entregado'] %>

<table class="ui sortable celled table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Estado</th>
      <th>Size</th>
      <th>Weight</th>
      <th>Value</th>
      <th>Conveyance</th>
      <th>Shipping date</th>
      <th>Delivery date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <% if package.fragility %>
        <tr class="fragil">
      <% else %>
        <tr>
      <% end %>
        <td><%= package.code %></td>
        <td><%= state[package.state] %></td>
        <td><%= package.size %></td>
        <td><%= package.weight %></td>
        <td><%= package.value %></td>
        <td><%= conveyance[package.conveyance - 1] %></td>
        <td><%= package.shipping_date %></td>
        <td><%= package.delivery_date %></td>
        <td>
          <div class="ui buttons">
            <%= link_to package, class:'ui icon button' do %>
              <i class="ui info icon"></i>
            <% end %>
            <%= link_to edit_package_path(package), class:'ui icon button' do %>
              <i class="ui edit icon"></i>
            <% end %>
            <%= link_to package, method: :delete, data: { confirm: 'Are you sure?' }, class:'ui icon button' do %>
              <i class="ui remove icon"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
