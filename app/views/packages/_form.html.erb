<%= form_for(package, html:{class: "ui form"}) do |f| %>
  <% if package.errors.any? %>
    <%= render 'general/error', model_object: package %>
  <% end %>

  <div class="four fields">
    <div class="field">
      <%= f.label :size, 'Tamaño' %>
      <%= f.text_field :size %>
    </div>
    <div class="field">
      <%= f.label :weight, 'Peso' %>
      <%= f.text_field :weight %>
    </div>

    <div class="field">
      <%= f.label :value, 'Valor' %>
      <%= f.text_field :value %>
    </div>

    <div class="field">
      <%= f.label :fragility, 'Frágil' %>
      <div class="ui toggle checkbox">
        <%= f.check_box :fragility %>
        <label></label>
      </div>
    </div>
  </div>

  <div class="two fields">
    <div class="field">
      <%= f.label :user_id, 'Cliente' %>
      <div class="ui action">
        <%= f.select :user_id, User.all.collect { |t| [t.name, t.id] },{},{include_blank: true, class: 'ui fluid search selection dropdown'}%>
      </div>
    </div>

    <div class="field">
      <%= f.label :receiver_id, 'Remitente' %>
      <div class="ui action">
        <%= f.select :receiver_id, Receiver.all.collect { |t| [t.name, t.id] },{},{include_blank: true, class: 'ui fluid search selection dropdown'} do %>
        <% end %>

        <%= link_to receivers_new_remote_url, remote: true, class: 'ui icon button pop', data:{content: 'Nuevo remitente'} do %>
          <i class="ui green add circle icon"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :observations, 'Observaciones' %>
    <%= f.text_area :observations %>
  </div>

  <div class="ui buttons">
    <%= f.submit 'Guardar', class: "ui green button" %>
    <%= link_to 'Cancelar', packages_path, class: "ui red button" %>
  </div>
<% end %>
