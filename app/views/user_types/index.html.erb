<p id="notice"><%= notice %></p>

    <table class="ui celled table">
      <thead>
        <tr>
          <th>Rol</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user_types.each do |user_type| %>
          <tr>
            <td><%= user_type.title %></td>
            <td>
              <div class="ui buttons">
                <%= link_to user_type, class:'ui blue icon button' do %>
                  <i class="ui info icon"></i>
                <% end %>
                <%= link_to edit_user_type_path(user_type), class:'ui teal icon button' do %>
                  <i class="ui edit icon"></i>
                <% end %>
                <%= link_to user_type, method: :delete, data: { confirm: 'Are you sure?' }, class:'ui red icon button' do %>
                  <i class="ui remove icon"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

