<% if @user.nil? %>
  $('#message').append("<%= j render 'general/error_no_data' %>");
  $('.message .close')
    .on('click', function() {
      $(this)
        .closest('.message')
        .transition('fade')
      ;
    })
  ;
<% else %>
  <% if @user.blank? %>
    $('#message').append("<%= j render 'general/error', model_object: @user %>")
    $('.message .close')
      .on('click', function() {
        $(this)
          .closest('.message')
          .transition('fade')
        ;
      })
    ;
  <% else %>
    $(location).attr('href', "<%= dashboard_url %>")
  <% end %>
<% end %>
