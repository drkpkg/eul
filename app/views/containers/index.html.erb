<p id="notice"><%= notice %></p>

<h1>Containers</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @containers.each do |container| %>
      <tr>
        <td><%= container.code %></td>
        <td>
          <div class="ui buttons">
            <%= link_to container, class: "ui icon blue button" do %>
              <i class="info icon"></i>
            <% end %>
            <%= link_to edit_container_path(container), class: "ui icon teal button" do %>
              <i class="edit icon"></i>
            <% end %>
            <%= link_to container, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui icon red button" do %>
              <i class="remove icon"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Container', new_container_path %>
